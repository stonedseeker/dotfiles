{
    "manifest_version": 3,
    "name": "YouTube Gradient Remover",
    "version": "1.0",
    "description": "Automatically removes YouTube's top and bottom gradients on video pages.",
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "permissions": ["scripting"],
    "icons": {
      "48": "icon.png"
    }
  }
  